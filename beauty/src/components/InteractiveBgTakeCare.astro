---
import video from "../assets/video-loop-5.mp4";
import TakeCare from "../assets/takeCare.jpg";
---

<section
    class="size-[50%] relative top-0 overflow-hidden text-center justify-center items-center block"
>
    <video src={video} autoplay loop></video>
    <div class="take">
        <img src={TakeCare.src} alt="" class="rounded-2xl" />
    </div>
</section>

<style>
    section {
        height: 100vh;
        background-color: black;
    }

    video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .take {
        position: relative;
        top: 100px;
        left: 50px;
        text-align: center;
    }

    .pretty img {
        width: 100px;
        height: 100px;
    }
</style>
