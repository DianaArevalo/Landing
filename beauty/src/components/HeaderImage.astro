---
import angeluz from "../assets/angeluz.png";
import kaba from "../assets/kaba.png";
import milagros from "../assets/milagros.png";
import pocion from "../assets/pocion.png";
---

<section
    class="md:w-[75%] w-50 top-0 md:bg-gradient-to-r md:from-[#cbf3f0] md:via-[#2ec4b6] md:to-blue-700 md:rounded-2xl md:shadow-2xl md:shadow-neutral-900 md:p-0 text-center"
>
    <div
        class="hidden md:w-full md:mr-10 md:grid md:grid-cols-2 justify-around"
    >
        <div class="p-10">
            <div
                class="text-center justify-center items-center size-60 bg-[rgb(255,255,255)] rounded-2xl hover:skew-y-12 outline-double outline-3 outline-offset-2 outline-white"
            >
                <img src={angeluz.src} alt="" width="400px" class="" />
            </div>
        </div>
        <div class="p-10 m-10">
            <div
                class="text-center justify-center items-center size-60 bg-[rgb(255,255,255)] rounded-2xl hover:skew-y-12 outline-double outline-3 outline-offset-2 outline-white"
            >
                <img src={kaba.src} alt="" width="400px" class="" />
            </div>
        </div>
        <div class="p-10">
            <div
                class="text-center justify-center items-center size-60 bg-[rgb(255,255,255)] rounded-2xl hover:skew-y-12 outline-double outline-3 outline-offset-2 outline-white"
            >
                <img src={milagros.src} alt="" width="400px" class="" />
            </div>
        </div>
        <div class="p-10 m-10">
            <div
                class="text-center justify-center items-center size-60 bg-[rgb(255,255,255)] rounded-2xl hover:skew-y-12 outline-double outline-3 outline-offset-2 outline-white"
            >
                <img src={pocion.src} alt="" width="400px" class="" />
            </div>
        </div>
    </div>
</section>

