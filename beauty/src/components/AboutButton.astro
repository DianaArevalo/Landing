---
export interface Props {
    href: string;
}
const { href } = Astro.props;
---

<a
    href={href}
    class="ml-5 mb-5 text-sm rounded-3xl border-2 border-black p-5 font-bold uppercase place-content-center"
>
    <slot name="before" />
    <slot />
    <slot name="after" />
</a>
