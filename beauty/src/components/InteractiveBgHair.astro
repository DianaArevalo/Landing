---
import video from "../assets/video-loop-4.mp4";
import hair from "../assets/hair.jpg";
---

<section
    class="size-[50%] relative top-0 overflow-hidden text-center justify-center items-center block"
>
    <video
        src={video}
        autoplay
        loop
        transition:name="media-player-hair"
        transition:persist></video>
    <div class="hair">
        <img src={hair.src} alt="" class="rounded-2xl" />
    </div>
</section>

<style>
    section {
        height: 100vh;
        background-color: black;
    }

    video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hair {
        position: relative;
        top: 50px;
        left: 50px;
        text-align: center;
    }

    .hair img {
        width: 600px;
    }
</style>
